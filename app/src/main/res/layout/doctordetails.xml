<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F7F7F7">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_hospital_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doctors at Hospital"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="4dp" />

    <!-- Filters Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="4dp"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spinner_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/time_filter"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/spinner_availability"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/availability_filter"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp"/>

        <Spinner
            android:id="@+id/spinner_specialization"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/specialization_filter"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp"/>

        <Spinner
            android:id="@+id/spinner_fees"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/fees_filter"
            android:spinnerMode="dropdown"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Doctor List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_doctors"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"/>

</LinearLayout>
